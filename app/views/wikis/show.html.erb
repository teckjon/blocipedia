<h1><%= @wiki.title %></h1>
<p><%= markdown_to_html(@wiki.body) %></p>
<p><%= time_ago_in_words(@wiki.created_at) %></p>
<div class= "col-md-4">
    <%= link_to("New Wiki", new_wiki_path, class: 'btn btn-success') if policy(Wiki.new) %>
    <%= link_to("Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success') if policy(@wiki) %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
</div>
